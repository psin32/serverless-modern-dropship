{
	"compilerOptions": {
		"preserveConstEnums": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"target": "es2020",
		"outDir": ".build",
		"moduleResolution": "node",
		"lib": ["es2020"],
		"rootDir": "./",
		"noImplicitAny": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"skipLibCheck": true,
		"typeRoots": ["./node_modules/@types"]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		".build",
		"tests"
	]
}